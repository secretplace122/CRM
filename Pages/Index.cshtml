@page
@model IndexModel
@using DG_CRM.Data.Models
@{
    ViewData["Title"] = "CRM - Записи клиентов";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-calendar-check"></i> Управление записями</h1>

    <!-- Блок с настройками -->
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i>
        <strong>Текущие настройки:</strong>
        Кратность времени: <span class="badge bg-primary">@Model.TimeSlotInterval минут</span> |
        Рабочие часы: @Model.WorkDayStart - @Model.WorkDayEnd
        <a asp-page="/Settings" class="btn btn-sm btn-outline-primary ms-2">Изменить</a>
    </div>

    <!-- Сообщения -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Панель управления -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <form method="get" class="row g-2">
                        <div class="col-auto">
                            <input type="text" class="form-control" placeholder="Поиск..."
                                   asp-for="SearchString" />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Найти
                            </button>
                            @if (!string.IsNullOrEmpty(Model.SearchString))
                            {
                                <a asp-page="./Index" class="btn btn-outline-secondary">Сбросить</a>
                            }
                        </div>
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-page="./Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Новая запись
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Список записей -->
    @if (!Model.Appointments.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x" style="font-size: 3rem; color: #6c757d;"></i>
            <h4 class="mt-3">Записей не найдено</h4>
            <a asp-page="./Create" class="btn btn-success mt-3">Создать первую запись</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Клиент</th>
                        <th>Контакты</th>
                        <th>Услуга</th>
                        <th>Дата/Время</th>
                        <th>Длит.</th>
                        <th>Цена</th>
                        <th>Статус</th>
                        <th>Заметки</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>
                                <strong>@appointment.FullName</strong>
                                @if (!string.IsNullOrEmpty(appointment.Email))
                                {
                                    <div class="small text-muted">@appointment.Email</div>
                                }
                            </td>
                            <td>@appointment.Phone</td>
                            <td>@appointment.ServiceName</td>
                            <td>
                                <div>@appointment.StartTime.ToString("dd.MM.yyyy")</div>
                                <small class="text-primary">@appointment.StartTime.ToString("HH:mm")</small>
                            </td>
                            <td>@appointment.DurationMinutes мин.</td>
                            <td>@appointment.Price.ToString("C")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                    @GetStatusDisplayName(appointment.Status)
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(appointment.Notes))
                                {
                                    <button type="button" class="btn btn-sm btn-outline-info"
                                            data-bs-toggle="popover"
                                            data-bs-title="Заметки"
                                            data-bs-content="@System.Net.WebUtility.HtmlEncode(appointment.Notes)"
                                            data-bs-trigger="hover focus">
                                        <i class="bi bi-chat-text"></i>
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="./Edit" asp-route-id="@appointment.Id"
                                       class="btn btn-outline-primary" title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete"
                                          asp-route-id="@appointment.Id"
                                          onsubmit="return confirm('Удалить запись?');" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Scheduled => "bg-primary",
            AppointmentStatus.Confirmed => "bg-success",
            AppointmentStatus.InProgress => "bg-warning",
            AppointmentStatus.Completed => "bg-secondary",
            AppointmentStatus.Cancelled => "bg-danger",
            _ => "bg-light text-dark"
        };
    }

    string GetStatusDisplayName(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Scheduled => "Запланировано",
            AppointmentStatus.Confirmed => "Подтверждено",
            AppointmentStatus.InProgress => "В работе",
            AppointmentStatus.Completed => "Завершено",
            AppointmentStatus.Cancelled => "Отменено",
            _ => status.ToString()
        };
    }
}

<script>
    // Активируем всплывающие подсказки для заметок
    document.addEventListener('DOMContentLoaded', function () {
        const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
        const popoverList = [...popoverTriggerList].map(popoverTriggerEl => {
            return new bootstrap.Popover(popoverTriggerEl, {
                html: true,
                sanitize: false,
                customClass: 'notes-popover'
            });
        });
    });
</script>

<style>
    .notes-popover .popover {
        max-width: 400px;
    }

    .notes-popover .popover-body {
        max-height: 200px;
        overflow-y: auto;
        white-space: pre-wrap;
        word-break: break-word;
    }
</style>