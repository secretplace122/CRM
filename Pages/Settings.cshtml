@page
@model DG_CRM.Pages.SettingsModel
@{
    ViewData["Title"] = "Настройки";
}

<div class="container mt-4">
    <h1><i class="bi bi-gear"></i> Настройки системы</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Настройки времени -->
    <div class="card mt-4">
        <div class="card-header">
            <h5><i class="bi bi-clock"></i> Настройки времени</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="SaveSettings">
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Кратность времени (мин)*</label>
                            <select class="form-select" asp-for="SystemSettings.TimeSlotInterval" required>
                                <option value="5">5 минут</option>
                                <option value="10">10 минут</option>
                                <option value="15">15 минут</option>
                                <option value="20" selected>20 минут</option>
                                <option value="30">30 минут</option>
                                <option value="60">60 минут</option>
                            </select>
                            <div class="form-text">Записи будут только в это время (10:00, 10:20, 10:40...)</div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Начало рабочего дня</label>
                            <input type="time" class="form-control"
                                   asp-for="SystemSettings.WorkDayStart" required>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Конец рабочего дня</label>
                            <input type="time" class="form-control"
                                   asp-for="SystemSettings.WorkDayEnd" required>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Перерыв между записями (мин)</label>
                            <input type="number" class="form-control"
                                   asp-for="SystemSettings.BreakBetweenSlots"
                                   min="0" max="60" required>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Сохранить настройки времени
                </button>
            </form>
        </div>
    </div>

    <!-- Управление услугами -->
    <div class="card mt-4">
        <div class="card-header">
            <h5><i class="bi bi-list-check"></i> Управление услугами</h5>
        </div>
        <div class="card-body">
            <!-- Форма добавления услуги -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h6>Добавить новую услугу</h6>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="AddService">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Название услуги *</label>
                                    <input type="text" class="form-control" asp-for="NewService.Name"
                                           required maxlength="100">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label class="form-label">Цена (₽) *</label>
                                    <input type="number" class="form-control" asp-for="NewService.Price"
                                           min="0" max="100000" step="50" required>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label class="form-label">Длительность (мин) *</label>
                                    <input type="number" class="form-control" asp-for="NewService.DurationMinutes"
                                           min="1" max="480" required>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label class="form-label">Категория</label>
                                    <input type="text" class="form-control" asp-for="NewService.Category"
                                           maxlength="50">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-plus"></i> Добавить
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Описание</label>
                            <textarea class="form-control" rows="2" asp-for="NewService.Description"
                                      maxlength="500"></textarea>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Список услуг -->
            <h6>Доступные услуги</h6>
            @if (!Model.Services.Any())
            {
                <div class="alert alert-info">
                    Нет доступных услуг. Добавьте первую услугу.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Категория</th>
                                <th>Цена</th>
                                <th>Длительность</th>
                                <th>Описание</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.Services)
                            {
                                <tr>
                                    <td>
                                        <strong>@service.Name</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(service.Category))
                                        {
                                            <span class="badge bg-secondary">@service.Category</span>
                                        }
                                    </td>
                                    <td>@service.Price.ToString("C")</td>
                                    <td>@service.DurationMinutes мин.</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(service.Description))
                                        {
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;"
                                                  title="@service.Description">
                                                @service.Description
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary"
                                                    onclick="editService(@service.Id, '@service.Name', @service.Price, @service.DurationMinutes)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post" asp-page-handler="DeleteService"
                                                  asp-route-id="@service.Id"
                                                  onsubmit="return confirm('Удалить услугу?');">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Модальное окно для редактирования услуги -->
<div class="modal fade" id="editServiceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="UpdateService">
                <input type="hidden" id="editServiceId" name="id" />
                <div class="modal-header">
                    <h5 class="modal-title">Редактировать услугу</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" class="form-control" id="editServiceName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Цена (₽)</label>
                        <input type="number" class="form-control" id="editServicePrice" name="price"
                               min="0" step="50" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Длительность (мин)</label>
                        <input type="number" class="form-control" id="editServiceDuration" name="duration"
                               min="1" max="480" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Редактирование услуги
    function editService(id, name, price, duration) {
        document.getElementById('editServiceId').value = id;
        document.getElementById('editServiceName').value = name;
        document.getElementById('editServicePrice').value = price;
        document.getElementById('editServiceDuration').value = duration;

        const modal = new bootstrap.Modal(document.getElementById('editServiceModal'));
        modal.show();
    }
</script>